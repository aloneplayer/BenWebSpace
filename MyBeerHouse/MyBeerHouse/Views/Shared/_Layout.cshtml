<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <link href="@Url.Content("~/content/styles/site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/styles/modules.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/styles/StickyFooter.css")" rel="stylesheet" type="text/css" />
    @RenderSection("HeaderContent", required: false)
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div id="logo">
                <h1>
                    <a href="/">Welcome To</a></h1>
                <h2>
                    <a href="/">The Beer House.</a></h2>
            </div>
            <div id="menu">
                <ul>
                    <li>@Html.ActionLink("Articles", "Index", "Article")</li>
                    <li>@Html.ActionLink("Newletters", "Index", "Newsletter")</li>
                    <li>@Html.ActionLink("Polls", "Index", "Poll")</li>
                    <li>@Html.ActionLink("Forums", "Index", "Forum")</li>
                    <li>@Html.ActionLink("Shop", "Index", "Commerce")</li>
                </ul>
            </div>
        </div>
        <div id="page">
            <div id="content">
                <h1 class="title">@ViewBag.Title</h1>
                @RenderBody()
            </div>
            <!-- end content -->
            <div id="sidebar">
                <div id="account" class="boxed">
                    <h2 class="title">
                        Account</h2>
                    <div class="content">
                        <ul>
                            @if (Context.User != null && Context.User.Identity != null && Context.User.Identity.IsAuthenticated)
                            { 
                                <li class="first">Welcome @Context.User.Identity.Name</li>
                                <li>@Html.ActionLink("Change Password", "ChangePassword", "User")</li>
                                <li>@Html.ActionLink("Manage My Profile", "UserProfile", "User")</li>
                                <li>@Html.ActionLink("Logout", "Logout", "User")</li>
                            }
                            else
                            { 
                                <li class="first">@Html.ActionLink("Login", "Login", "User")</li>
                            }
                        </ul>
                    </div>
                </div>
                @RenderSection("SidebarContent", required: false)
            </div>
        </div>
    </div>
    <div id="footer">
        <p id="legal">
            Rewritten with MVC3 and Razor Engine by Benjamin Huang
        </p>
        <p id="links">
            <a href="http://thebeerhouse.codeplex.com/">The Beer House</a>
        </p>
    </div>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/scripts/global.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/content/scripts/poll.js")" type="text/javascript"></script>
    @RenderSection("ScriptContent", required: false)
</body>
</html>
